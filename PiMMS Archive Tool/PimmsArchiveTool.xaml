<Window x:Class="PimmsArchiveTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PiMMS Archive Tool" Height="550.322" Width="631.913">
    <Grid>
        <ComboBox x:Name="ServerComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ServerComboBox_SelectionChanged" Loaded="ServerComboBox_Loaded"/>
        <Label Content="Command:" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" Width="105"/>
        <TextBox x:Name="CommandTextBox" HorizontalAlignment="Left" Height="23" Margin="10,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" Text="ls -lh" KeyUp="CommandTextBox_KeyUp"/>
        <Button x:Name="ConnectButton" Content="Run SSH Command" HorizontalAlignment="Left" Margin="387,70,0,0" VerticalAlignment="Top" Width="120" Click="ConnectButton_Click"/>
        <TextBox x:Name="DebugTextBox" IsReadOnly="True" HorizontalAlignment="Left" Height="412" Margin="10,98,0,0" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Visible" VerticalAlignment="Top" Width="604"/>
        <Button x:Name="DbQueryButton" Content="DB Query" HorizontalAlignment="Left" Margin="387,10,0,0" VerticalAlignment="Top" Width="120" Click="DbQueryButton_Click"/>
    </Grid>
</Window>
